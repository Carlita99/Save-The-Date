<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="Create your own service"
                android:textAlignment="center"
                android:textColor="#6168b5"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_below="@id/title"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Type of the service  "
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/title"
                android:background="#000000"
                android:layout_marginTop="20dp">

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:ms_background_color="#eeeeee"
                    android:layout_margin="0.5dp"
                    android:textColor="#000000"
                    android:id="@+id/pickType" />
            </LinearLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/type"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Name of the Service  "
                android:textColor="#000000" />

            <EditText
                android:id="@+id/namedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#6168b5"
                android:textCursorDrawable="@drawable/color"
                android:layout_below="@id/name"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/namedit"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Describe the Service  "
                android:textColor="#000000" />

            <EditText
                android:id="@+id/descedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#6168b5"
                android:textCursorDrawable="@drawable/color"
                android:layout_below="@id/desc"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <ImageView
                android:id="@+id/location"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/location2"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/descedit"/>

            <EditText
                android:id="@+id/locationedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/location"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/descedit"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/openhour"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_below="@id/locationedit"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Opening hour  "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/openhouredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/locationedit"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:textColor="#000000"
                android:layout_toRightOf="@id/openhour"
                android:layout_marginLeft="10dp" />

            <ImageView
                android:id="@+id/open"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/clock"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/locationedit"/>

            <TextView
                android:id="@+id/closehour"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_below="@id/openhour"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Closing hour  "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/closehouredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/openhour"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:textColor="#000000"
                android:layout_alignStart="@id/openhouredit"/>

            <ImageView
                android:id="@+id/close"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/clock"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/openhour"/>

            <TextView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_below="@id/close"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:text="Choose an image for your service  "
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/imageclick"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_below="@id/close"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="80dp"
                android:src="@drawable/emptyimage" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="40dp"/>

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create service"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="40dp"/>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>