<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/container"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:textColor="#6168b5"
            android:fontFamily="@font/tnr"
            android:textSize="30dp"
            android:text="Name of Service"/>

        <ImageView
            android:id="@+id/imgView"
            android:layout_below="@id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/emptyimage" />


        <TextView
            android:id="@+id/nameprov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Marc Abdo"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/myColor"
            android:layout_alignParentRight="true"
            android:layout_below="@id/imgView"/>

        <TextView
            android:id="@+id/prof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_toLeftOf="@id/nameprov"
            android:text="Provided by :  "
            android:layout_below="@id/imgView"/>


        <TextView
            android:id="@+id/avgreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameprov"
            android:layout_marginTop="10dp"
            android:layout_marginRight="7dp"
            android:visibility="gone"
            android:layout_toLeftOf="@id/star"/>

        <ImageView
            android:id="@+id/star"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/nameprov"
            android:visibility="gone"
            android:background="@drawable/blackstar"/>

        <ImageView
            android:id="@+id/comment"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_below="@+id/nameprov"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="24dp"
            android:visibility="gone"
            android:background="@drawable/comment" />

        <com.codesgood.views.JustifiedTextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#000000"
            android:textSize="18dp"
            android:text="The description of t and awesome!!!!"/>

        <ImageView
            android:id="@+id/location"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/desc"
            android:layout_margin="10dp"
            android:background="@drawable/location"/>

        <TextView
            android:id="@+id/loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fanar, Lebanon"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/location"
            android:textSize="17dp"
            android:layout_below="@id/desc"/>

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type: Restaurant "
            android:layout_below="@id/loc"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hours : 9 AM -> 10 PM"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:textColor="#000000"
            android:layout_below="@id/type"/>

        <ImageView
            android:id="@+id/phone"
            android:layout_below="@id/duration"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/phone"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/phonedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+961 123 456"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/phone"
            android:textSize="17dp"
            android:layout_below="@id/duration"/>

        <TextView
            android:id="@+id/viewstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phonedit"
            android:text="View all my reservations  "
            android:layout_marginLeft="15dp"
            android:paddingBottom="7dp"
            android:textColor="@color/myColor"
            android:visibility="gone"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/cancelreserv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewstatus"
            android:text="Cancel a reservation"
            android:layout_marginLeft="15dp"
            android:paddingBottom="15dp"
            android:textColor="@color/myColor"
            android:visibility="gone"
            android:layout_marginTop="3dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_marginTop="15dp"
        android:layout_below="@id/imgView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c7bdbd" />
</LinearLayout>