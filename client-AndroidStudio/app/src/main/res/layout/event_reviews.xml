<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/profile"/>

        <ImageView
            android:id="@+id/reviewpic"
            android:layout_width="70dp"
            android:layout_height="15dp"
            android:layout_marginTop="7dp"
            android:layout_below="@id/fullname"
            android:layout_alignStart="@id/fullname"/>

        <TextView
            android:id="@+id/reviewnumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/reviewpic"
            android:layout_below="@id/fullname"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:text="4/5"/>

        <com.codesgood.views.JustifiedTextView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reviewpic"
            android:layout_alignStart="@id/reviewpic"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"/>

        <View
            android:id="@+id/view"
            android:layout_marginTop="15dp"
            android:layout_below="@id/comment"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c7bdbd" />

    </RelativeLayout>


</LinearLayout>